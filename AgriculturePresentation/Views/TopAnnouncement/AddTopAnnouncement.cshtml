@model EntityLayer.Concrete.TopAnnouncement
@{
    ViewData["Title"] = "AddTopAnnouncement";
    Layout = "~/Views/Shared/_AdminLayout.cshtml";
}


<div class="col-12 grid-margin stretch-card">
    <div class="card">
        <div class="card-body">
            <h4 class="card-title">Yeni Ust duyuru girişi</h4>
            <form class="forms-sample" method="post">
                <div class="form-group">

                    <label>Başlık</label>
                    <input type="text" class="form-control" id="exampleInputName1" placeholder="Başlık giriniz" asp-for="Title">
                </div>
                <div class="form-group">
                    <label>Açıklama</label>
                    <textarea cols="30" rows="5" asp-for="Description" class="form-control" placeholder="Açıklamayı giriniz"></textarea>
                </div>
                <div class="form-group">
                    <label>Kısa Açıklama</label>
                    <textarea cols="30" rows="5" asp-for="MinDescription" class="form-control" placeholder="Kısa açıklamayı giriniz"></textarea>
                </div>
                <div class="form-group">
                    <label>Url</label>
                    <textarea cols="30" rows="5" asp-for="Imageurl" class="form-control" placeholder="Görsel url giriniz"></textarea>
                </div>


                <button type="submit" class="btn btn-primary me-2">Kaydet</button>
            </form>
        </div>
    </div>
</div>